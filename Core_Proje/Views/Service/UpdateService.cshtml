@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("UpdateService", "Service", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title" style="font-size:25px">Hizmet Güncelleme Paneli </h4>
                <form class="forms-sample" method="post">

                    @Html.HiddenFor(x=>x.ServiceID)
                    <br />
                    @Html.Label("Deneyim Başlığı")
                    @Html.TextBoxFor(x=>x.Title, new { @class = "form-control"})
                    <br />

                    <label>Resim Yolu</label>
                    @Html.TextBoxFor(x=>x.ImageUrl, new { @class = "form-control"})
                    <br />

                    <button class="btn btn-success">Güncelle</button>
                    <a href="/Service/Index" class="btn btn-info">Geri</a>
                </form>
            </div>
        </div>
    </div>
}
