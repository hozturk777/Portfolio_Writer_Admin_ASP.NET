@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<form asp-action="AddTestimonial">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title" style="font-size:25px">Referans Ekleme Paneli </h4>
                <class="forms-sample">
                    <div class="form-group">
                        @*<label>ID</label>*@
                        <input type="hidden" class="form-control" asp-for="@Model.TestimonialID" />   @*@Html.HiddenFor(x => x.TestimonialID, new {@class = "form-control"})*@
                    </div>
                    <div class="form-group">
                        <label>Ad Soyad</label>
                        <input type="text" class="form-control" asp-for="@Model.ClientName" />   @*@Html.TextBoxFor(x => x.ClientName, new {@class = "form-control"})*@
                    </div>
                    <div class="form-group">
                        <label>Unvan</label>
                        <input type="text" class="form-control" asp-for="@Model.Title" />  @*@Html.TextBoxFor(x => x.Title, new {@class = "form-control"})*@
                    </div>
                    <div class="form-group">
                        <label>Şirket</label>
                        <input type="text" class="form-control" asp-for="@Model.Company" />  @*@Html.TextBoxFor(x => x.Company, new {@class = "form-control"})*@
                    </div>
                    <div class="form-group">
                        <label>Görsel</label>
                        <input type="text" class="form-control" asp-for="@Model.ImageUrl" /> @*@Html.TextBoxFor(x => x.ImageUrl, new {@class = "form-control"})*@
                    </div>
                    <div class="form-group">
                        <label>Yorum</label>
                        <textarea type="text" class="form-control" asp-for="@Model.Comment" rows="6"></textarea> @*@Html.TextAreaFor(x => x.Comment, 6, 3, new {@class = "form-control"})*@
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Ekle</button>
                    <a href="/Testimonial/Index" class="btn btn-info">Geri</a>
                </>
            </div>
        </div>
    </div>
</form>




